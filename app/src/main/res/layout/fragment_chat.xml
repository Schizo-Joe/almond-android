<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AssistantFragment"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="@android:color/black">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chat_list"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:dividerPadding="@dimen/activity_vertical_margin"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:scrollingCache="true"
        android:smoothScrollbar="false"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/assistant_input"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/assistant_input"
        android:minLines="1"
        android:maxLines="1"
        android:enabled="true"
        android:imeOptions="actionSend"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/assistant_progress" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleSmall"
        android:id="@+id/assistant_progress"
        android:padding="5dp"
        android:indeterminate="false"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/stanford_cardinal"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/btn_never_mind"
        android:layout_above="@+id/chat_list"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_never_mind"
        android:src="@drawable/ic_replay_black"
        android:tint="@color/stanford_cardinal"
        android:clickable="true"
        android:padding="5dp"
        android:contentDescription="@string/btn_never_mind"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_assistant_voice"
        android:layout_alignBottom="@+id/assistant_input" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_assistant_voice"
        android:src="@drawable/ic_mic_black"
        android:tint="@color/stanford_cardinal"
        android:clickable="true"
        android:padding="5dp"
        android:layout_gravity="center"
        android:contentDescription="@string/btn_assistant_voice"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btn_never_mind" />

</RelativeLayout>
