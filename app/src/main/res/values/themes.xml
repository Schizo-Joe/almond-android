<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Stanford" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarStyle">@style/StanfordActionBar</item>
        <item name="android:colorPrimaryDark">@color/dark_stanford_cardinal</item>
    </style>

    <style name="StanfordActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/stanford_cardinal</item>
        <item name="android:titleTextStyle">@style/StanfordActionBarTitle</item>
    </style>

    <style name="StanfordActionBarTitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:foreground">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <color name="stanford_cardinal">#8c1515</color>
    <color name="dark_stanford_cardinal">#670000</color>
</resources>