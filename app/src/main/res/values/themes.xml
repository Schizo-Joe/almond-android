<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Stanford" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarTheme">@style/StanfordActionBar</item>
        <item name="android:colorPrimary">@color/stanford_cardinal</item>
        <item name="android:colorPrimaryDark">@color/dark_stanford_cardinal</item>
        <item name="android:colorAccent">@color/stanford_almost_cardinal</item>
        <item name="android:colorBackground">@color/stanford_background</item>
        <item name="android:textColorPrimaryInverse">#ffffff</item>
    </style>

    <style name="StanfordActionBar" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:colorAccent">#ffffff</item>
    </style>

    <style name="FullscreenTheme" parent="Stanford">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="rdl_title" parent="android:Widget.Material.Light.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="LandingPageTheme" parent="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <color name="stanford_cardinal">#8c1515</color>
    <color name="stanford_almost_cardinal">#6d1010</color>
    <color name="dark_stanford_cardinal">#670000</color>
    <color name="stanford_background">#DEDEDE</color>
    <color name="black_overlay">#66000000</color>
</resources>