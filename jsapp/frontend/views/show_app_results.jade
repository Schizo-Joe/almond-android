extends layout

block page_name
  | #{name}

block content
  if arrays.length === 0 && tuples.length === 0 && singles.length === 0
    p This app has no visible result.
  for kw in arrays
    table.table.array-keyword
      caption= kw.name
      tbody
        each v in kw.value
          if v !== null
            tr
              if Array.isArray(v)
                each e in v
                  td= e
              else
                td= v

  for kw in tuples
    table.table.tuple-keyword
      caption= kw.name
      tbody
        tr
          each e in kw.value
            td= e

  dl
    for kw in singles
      dt= kw.name
      dt= kw.value
